generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

generator pothos {
  provider     = "prisma-pothos-types"
  output       = "./generated.d.ts"
  prismaUtils  = "true"
  clientOutput = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id           String        @id @default(uuid())
  name         String
  propertyUses PropertyUse[]
}

model PropertyUse {
  id         String   @id @default(uuid())
  name       String
  unitCount  Int
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
}
